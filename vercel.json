{
  "version": 2,
  "builds": [
    {
      "src": "collect_static.sh",
      "use": "@vercel/build-utils",
      "config": {
        "command": "bash collect_static.sh"
      }
    },
    {
      "src": "speedvoice_backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.13.1"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "speedvoice_backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "speedvoice_backend/wsgi.py"
    }
  ]
}