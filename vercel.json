{
    "version": 2,
    "builds": [
      {
        "src": "build.sh",
        "use": "@vercel/python",
        "config": {
          "distDir": "staticfiles"
        }
      },
      {
        "src": "speedvoice_backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "speedvoice_backend/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "speedvoice_backend/wsgi.py"
      }
    ]
  }